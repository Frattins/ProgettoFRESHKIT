@model IEnumerable<JerseyShop.Models.Maglia>

<h2>Maglie della Premier League</h2>

<div class="filters">
    <select id="teamFilter" class="form-control" onchange="filterByTeam()">
        <option value="">Tutte le squadre</option>
        @foreach (var team in Model.Select(m => m.Squadra).Distinct())
        {
            <option value="@team">@team</option>
        }
    </select>
</div>

<div class="maglie-list">
    @foreach (var maglia in Model)
    {
        <div class="maglia-item card" style="width: 18rem;">
            <img src="/images/Maglie/@maglia.ImmagineUrl" class="card-img-top" alt="@maglia.Nome" style="max-height: 200px;object-fit: contain;">
            <div class="card-body">
                <h5 class="card-title">@maglia.Nome</h5>
                <p class="card-text">@maglia.Prezzo €</p>
                <div class="d-flex justify-content-between align-items-center">
                    <a href="/Maglia/Details/@maglia.Id" class="btn btn-secondary">Vedi Dettagli</a>
                    <button class="btn btn-outline-primary add-to-cart" data-maglia-id="@maglia.Id">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                    <button class="btn btn-outline-danger toggle-favorite" data-maglia-id="@maglia.Id">
                        <i class="@(maglia.IsFavorite ? "fas" : "far") fa-heart"></i>
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function filterByTeam() {
        var selectedTeam = document.getElementById("teamFilter").value;
        var maglie = document.querySelectorAll(".maglia-item");
        maglie.forEach(function (maglia) {
            if (selectedTeam === "" || maglia.innerText.includes(selectedTeam)) {
                maglia.style.display = "block";
            } else {
                maglia.style.display = "none";
            }
        });
    }
</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.add-to-cart').on('click', function (e) {
            e.preventDefault();
            var magliaId = $(this).data('maglia-id');
            $.post('/Carrello/Aggiungi', { magliaId: magliaId }, function (response) {
                alert('Maglia aggiunta al carrello!');
            }).fail(function (error) {
                console.error('Errore:', error);
                alert('Si è verificato un errore durante l'aggiunta al carrello.');
            });
        });

        $('.toggle-favorite').on('click', function (e) {
            e.preventDefault();
            var btn = $(this);
            var magliaId = btn.data('maglia-id');
            $.post('/Favorites/ToggleFavorite', { magliaId: magliaId }, function (data) {
                if (data.isFavorite) {
                    btn.find('i').removeClass('far').addClass('fas');
                } else {
                    btn.find('i').removeClass('fas').addClass('far');
                }
            }).fail(function (error) {
                console.error('Errore:', error);
                alert('Si è verificato un errore durante l'aggiornamento dei preferiti.');
            });
        });
    });
</script>
