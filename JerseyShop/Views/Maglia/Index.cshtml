@model IEnumerable<JerseyShop.Models.Maglia>

<h2>Gestione Maglie</h2>

<div class="row">
    @foreach (var maglia in Model)
    {
        <div class="col-md-3">
            <div class="maglia-item card mb-3" style="width: 100%;">
                <img src="/images/Maglie/@maglia.ImmagineUrl" class="card-img-top" alt="@maglia.Nome" style="max-height: 150px;">
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 1.1rem;">@maglia.Nome</h5>
                    <p class="card-text" style="font-size: 0.9rem;">@maglia.Prezzo €</p>
                    <a href="/Carrello/Add/@maglia.Id" class="btn btn-primary btn-sm">Aggiungi al Carrello</a>
                    <form action="/Maglia/Delete" method="post" style="display: inline-block;">
                        <input type="hidden" name="id" value="@maglia.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
